# Environment Configuration Template
# Copy this file to src/.env and update with your values

# =================
# Application
# =================
APP_NAME=DocuMind
APP_VERSION=1.0.0
# Log Level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =================
# MongoDB Configuration
# =================
MONGO_URL=mongodb://localhost:27017/
MONGO_DB=DocuMind
MONGO_COLLECTION=extractions

# =================
# LLM Configuration (Ollama)
# =================
# Use a quantized model for lower latency (e.g. qwen2.5:1.5b or llama3.2:3b)
LLM__MODEL=qwen2.5:1.5b
LLM__TEMPERATURE=0.0
LLM__BASE_URL=http://localhost:11434
LLM__EMBEDDING_BASE_URL=http://localhost:11434

# =================
# Embedding Configuration
# =================
LLM__EMBEDDING_MODEL=nomic-embed-text

# =================
# VLM Configuration (Vision Model)
# =================
# Providers: "mistral" or "groq"
VLM__PROVIDER=groq
VLM__MODEL=meta-llama/llama-4-scout-17b-16e-instruct
# Add your API key here (REQUIRED)
VLM__API_KEY=your_api_key_here
VLM__API_URL=https://api.groq.com/openai/v1/chat/completions
VLM__TIMEOUT=120

# =================
# OCR Configuration
# =================
OCR_ENABLED=true
OCR_LANGUAGES=en,ar
OCR_GPU=false

# =================
# ChromaDB Configuration
# =================
CHROMA_DB_DIR=assets/memories/chroma_db

# =================
# Redis Configuration (For Caching & Celery)
# =================
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_DB=0
# REDIS_USERNAME=
# REDIS_PASSWORD=
REDIS_SSL=false

# =================
# File Processing
# =================
# Max file size in bytes (100MB)
FILE_MAX_SIZE=104857600
# Chunking setting
MAX_TEXT_LENGTH=50

# =================
# LlamaCloud Configuration (Optional for better Parsing)
# =================
# Create key at https://cloud.llamaindex.ai/
LLAMA_CLOUD_API_KEY=your_llama_cloud_key_here
LLAMA_CLOUD_TIER_PARSING=free
TIMEOUT_PARSE_DOCUMENT=300

# =================
# Worker Configuration
# =================
# Callback URL for task completion notifications
WORKER__BACKEND_CALLBACK_URL=https://your-webhook-url.com/callback
